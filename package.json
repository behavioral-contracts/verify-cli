{
  "name": "@behavioral-contracts/verify-cli",
  "version": "0.1.0",
  "description": "CLI tool for verifying TypeScript code against behavioral contracts",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "verify-cli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typescript",
    "verification",
    "behavioral-contracts",
    "static-analysis",
    "code-quality"
  ],
  "author": "Behavioral Contracts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/behavioral-contracts/verify-cli.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "typescript": "^5.3.3",
    "yaml": "^2.3.4",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "vitest": "^1.2.0"
  }
}
