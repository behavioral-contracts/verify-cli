{
  "name": "@behavioral-contracts/verify-cli",
  "version": "1.2.0",
  "description": "CLI tool for verifying TypeScript code against behavioral contracts",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "verify-cli": "./dist/index.js",
    "behavioral-contracts": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:fixtures": "vitest run fixture-regression",
    "test:fixtures:watch": "vitest fixture-regression",
    "test:fixtures:generate": "node scripts/generate-expected-outputs.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "verify": "node dist/index.js --tsconfig ./tsconfig.json --corpus ../corpus",
    "verify:self": "npm run build && npm run verify"
  },
  "keywords": [
    "typescript",
    "verification",
    "behavioral-contracts",
    "static-analysis",
    "code-quality"
  ],
  "author": "Behavioral Contracts",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/behavioral-contracts/verify-cli.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@behavioral-contracts/corpus": "^1.0.0",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "typescript": "^5.3.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "vitest": "^1.2.0"
  }
}
